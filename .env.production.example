# Database configuration for production
DB_HOST=db
DB_NAME=kindloans_prod
DB_USER=kindloans_user
DB_PASS=change_this_in_production  # Use a strong password
POSTGRES_DB=kindloans_prod
POSTGRES_USER=kindloans_user
POSTGRES_PASSWORD=change_this_in_production  # Same as DB_PASS

# PayPal API configuration (Production)
PAYPAL_CLIENT_ID=your_prod_client_id
PAYPAL_SECRET_KEY=your_prod_secret_key
PAYPAL_BASE_URL=https://api-m.paypal.com
PAYPAL_MODE=live

# Frontend settings
NODE_ENV=production
# Vite production API configuration
VITE_API_URL=/api  # Uses relative path, nginx will handle proxying to backend

# Nginx and SSL configuration
VIRTUAL_HOST=your_domain.com  # Your production domain
LETSENCRYPT_HOST=your_domain.com  # Same as VIRTUAL_HOST for SSL certificate
